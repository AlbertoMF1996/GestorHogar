<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#4E4E4E"
    tools:context=".ListaSubcategoriasActivity">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/listaSubcategorias_recyclerSubcategorias_recyclerView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="1dp"
        android:layout_marginTop="1dp"
        android:layout_marginEnd="1dp"
        android:layout_marginBottom="100dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/listSubcategoriasAct_eliminar_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="36dp"
        android:layout_marginTop="24dp"
        android:text="Button"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/listaSubcategorias_recyclerSubcategorias_recyclerView" />

    <TextView
        android:id="@+id/listaSubcategoriasAct_default_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sin Subcategorias"
        android:textSize="42dp"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="@+id/listaSubcategorias_recyclerSubcategorias_recyclerView"
        app:layout_constraintEnd_toEndOf="@+id/listaSubcategorias_recyclerSubcategorias_recyclerView"
        app:layout_constraintStart_toStartOf="@+id/listaSubcategorias_recyclerSubcategorias_recyclerView"
        app:layout_constraintTop_toTopOf="@+id/listaSubcategorias_recyclerSubcategorias_recyclerView" />
</androidx.constraintlayout.widget.ConstraintLayout>